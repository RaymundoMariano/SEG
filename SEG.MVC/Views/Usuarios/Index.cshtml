@model IEnumerable<Seguranca.Domain.Models.UsuarioModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Usuários</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model
                    .PerfisUsuario.FirstOrDefault(pu => pu.UsuarioId == model.UsuarioId).Perfil.Nome)
            </th>
              <th>
                @Html.DisplayNameFor(model => model
                    .PerfisUsuario.FirstOrDefault(pu => pu.UsuarioId == model.UsuarioId).Perfil.FuncaoId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item
                    .PerfisUsuario.FirstOrDefault(pu => pu.UsuarioId == item.UsuarioId).Perfil.Nome)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item
                    .PerfisUsuario.FirstOrDefault(pu => pu.UsuarioId == item.UsuarioId).Perfil.Funcao.Nome)
            </td>
            <td>
                @Html.ActionLink("Restrições", "Edit", new { id=item.UsuarioId }) |
                @Html.ActionLink("Perfis", "Details", new { id=item.UsuarioId }) 
            </td>
        </tr>
}
    </tbody>
</table>