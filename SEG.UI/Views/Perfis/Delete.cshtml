@model SEG.Domain.Models.Aplicacao.PerfilModel

@{
    ViewData["Title"] = "Delete";
}

@{
    var seguranca = (SEG.Service.Seguranca)ViewBag.Seguranca;
    var pu = Model.PerfisUsuario.FirstOrDefault(pu => pu.Usuario.Nome == seguranca.Usuario.Nome);
    var nomeUsuario = pu == null ? null : pu.Usuario.Nome;
}

<h1>Excluir</h1>

<h3>Tem certeza que quer excluir?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FuncaoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcao.Nome)
        </dd>
    </dl>
    
    @if (seguranca.Usuario.Nome != nomeUsuario && seguranca.Perfil.FuncaoId < Model.FuncaoId)
    {
        <form asp-action="Delete">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    }
    else
    {
        <div>
            <a asp-action="Index">Voltar</a>
        </div>
    }
</div>
