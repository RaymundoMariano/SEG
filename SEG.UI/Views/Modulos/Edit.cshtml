@model SEG.Domain.Models.Aplicacao.ModuloModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
            <div>
                <input type="hidden" asp-for="CreatedSystem" />
            </div>

            <div class="form-group">
                <div class="form-group-header">
                    <h1>Formulários</h1>
                </div>
                <div class="form-group-body">
                    @if (Model.ModulosFormulario.Any())
                    {
                        foreach (var moduloFormulario in Model.ModulosFormulario)
                        {
                            <h5 class="form-group-title">@moduloFormulario.Formulario.Nome</h5>
                        }
                    }
                    else
                    {
                        <h5 class="form-group-title">Sem formulários</h5>
                    }
                </div>
                <div class="form-group-footer">
                    <a asp-controller="Modulos" asp-action="EditFormularios"
                       asp-route-moduloId="@Model.ModuloId" class="btn btn-primary">
                       Associar formulários a este módulo
                    </a>            
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
