@model Seguranca.Domain.Models.FormularioModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="CreatedSystem" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>  
            
            <div class="form-group">
                <div class="form-group-header">
                    <h1>Eventos</h1>
                </div>
                <div class="form-group-body">
                    @if (Model.FormulariosEvento.Any())
                    {
                        foreach (var formularioEvento in Model.FormulariosEvento)
                        {
                            <h5 class="form-group-title">@formularioEvento.Evento.Nome</h5>
                        }
                    }
                    else
                    {
                        <h5 class="form-group-title">Sem eventos</h5>
                    }
                </div>
                <div class="form-group-footer">
                    <a asp-controller="Formularios" asp-action="EditEventos"
                       asp-route-formularioId="@Model.FormularioId" class="btn btn-primary">
                       Associar eventos a este Formulário
                    </a>            
                </div>
            </div>            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
